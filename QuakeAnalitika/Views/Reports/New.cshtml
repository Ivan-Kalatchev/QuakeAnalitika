@{
    ViewData["Title"] = "New";
}



<v-row>
    <v-col>
        <v-slider hint="Im a hint" v-model="amount" max="5" min="1"></v-slider>
    </v-col>
</v-row>

<v-row>
    <v-col>
        <l-map style="height: 400px" :zoom="zoom" :center="center" @@ready="onMapReady">
            <l-tile-layer :url="url" :attribution="attribution"></l-tile-layer>
            <l-marker :lat-lng="marker"></l-marker>
        </l-map>
    </v-col>
</v-row>

<v-row>
    <v-col>
        <v-btn color="blue" text block @@click="save">
            Save
        </v-btn>
    </v-col>
</v-row>
<v-dialog v-model="errDialog" max-width="600">
    <v-card>
        <v-card-title class="text-h5 error lighten-5">
            Грешка!
        </v-card-title>
        <v-card-text class="mt-2">
            {{errText}}
        </v-card-text>

        <v-divider style="margin-top: -1rem;"></v-divider>

        <v-card-actions>
            <v-col class="pa-0" cols="12">
                <v-btn color="error" text block @@click="errDialog = false;">
                    Разбирам
                </v-btn>
            </v-col>
        </v-card-actions>
    </v-card>
</v-dialog>

@section Scripts {
    <script src="~/js/new.js"></script>
}